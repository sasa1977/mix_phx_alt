<h1>Register</h1>

<.form let={f} for={@changeset} action={Routes.user_path(@conn, :start_registration)} as={:form}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :email %>
  <%= email_input f, :email, required: true %>
  <%= error_tag f, :email %>

  <div>
    <%= submit "Register" %>
  </div>
</.form>

